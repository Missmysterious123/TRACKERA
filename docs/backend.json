{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system, either a manager or staff.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (e.g., MGR01, STF001)."
        },
        "name": {
          "type": "string",
          "description": "Name of the user."
        },
        "role": {
          "type": "string",
          "description": "Role of the user.",
          "enum": ["manager", "staff"]
        },
        "branchId": {
          "type": "string",
          "description": "The branch this user is associated with."
        }
      },
      "required": ["id", "name", "role", "branchId"]
    },
    "Branch": {
      "title": "Branch",
      "type": "object",
      "description": "Represents a branch of a restaurant.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the branch."
        },
        "name": {
          "type": "string",
          "description": "Name of the branch."
        },
        "managerId": {
          "type": "string",
          "description": "Reference to the Manager assigned to this branch."
        }
      },
      "required": ["id", "name", "managerId"]
    },
    "MenuCategory": {
      "title": "MenuCategory",
      "type": "object",
      "description": "Represents a category of menu items (e.g., Starters, Main Course).",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the menu category."
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "price": {
                "type": "number"
              }
            },
            "required": ["name", "price"]
          }
        }
      },
      "required": ["name", "items"]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "Represents a customer order.",
      "properties": {
        "table_no": {
          "type": "number",
          "description": "Table number for the order."
        },
        "staff_id": {
          "type": "string",
          "description": "Reference to the Staff member who placed the order."
        },
        "branch_id": {
          "type": "string",
          "description": "Reference to the Branch where the order was placed."
        },
        "items": {
          "type": "array",
          "description": "List of items in the order.",
          "items": {
            "type": "object",
            "properties": {
              "item_name": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              },
              "price": {
                "type": "number"
              }
            },
            "required": ["item_name", "quantity", "price"]
          }
        },
        "subtotal": {
          "type": "number",
          "description": "Subtotal amount of the order."
        },
        "gst_rate": {
          "type": "number",
          "description": "GST rate applied to the order."
        },
        "gst_amount": {
          "type": "number",
          "description": "GST amount for the order."
        },
        "total": {
          "type": "number",
          "description": "Total amount of the order."
        },
        "date": {
          "type": "string",
          "description": "Date and time when the order was placed.",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "Status of the order (e.g., Active, Served, Cancelled).",
          "enum": ["Active", "Served", "Cancelled"]
        }
      },
      "required": [
        "table_no",
        "staff_id",
        "branch_id",
        "items",
        "subtotal",
        "gst_rate",
        "gst_amount",
        "total",
        "date",
        "status"
      ]
    },
    "Table": {
      "title": "Table",
      "type": "object",
      "description": "Represents a table in the restaurant.",
      "properties": {
        "number": {
          "type": "number",
          "description": "The table number."
        },
        "status": {
          "type": "string",
          "description": "Status of the table (Available, Active Order, Served).",
          "enum": ["Available", "Active Order", "Served"]
        }
      },
      "required": ["number", "status"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/staff/{staffId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores staff user information."
    },
    "/branches/{branchId}": {
      "schema": { "$ref": "#/entities/Branch" },
      "description": "Stores branch information."
    },
    "/menu/{menuId}": {
      "schema": { "$ref": "#/entities/MenuCategory" },
      "description": "Stores menu information, with each document representing a category."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores customer orders."
    }
  }
}
